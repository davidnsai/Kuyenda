<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Kuyenda.Converters"
             x:Class="Kuyenda.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:StepsToDistanceConverter x:Key="StepsToDistanceConverter"/>
            <converters:StepsToCaloriesConverter x:Key="StepsToCaloriesConverter"/>
            <converters:DateStringToHumanReadableConverter x:Key="DateStringToHumanReadableConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
