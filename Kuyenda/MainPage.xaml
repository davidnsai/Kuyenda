<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:viewmodels="clr-namespace:Kuyenda.ViewModels"
             x:Class="Kuyenda.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="15,0"
            Spacing="25">
            <Border 
                Padding="15"
                BackgroundColor="{dx:ThemeColor SurfaceContainer}"
                >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>
                <VerticalStackLayout 
                    Spacing="15">
                    <Label 
                        FontSize="Title"
                        Margin="0,0,0,15">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Steps " FontAttributes="Bold"/>
                                <Span Text="July 21"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <dx:RadialProgressBar
                        Thickness="20"
                        ValueIndicatorThickness="20"
                        MaximumWidthRequest="250"
                        SweepAngle="360" StartAngle="-90" 
                        Value="75" 
                        StartValue="0" 
                        EndValue="100">
                        <dx:RadialProgressBar.BindingContext>
                            <viewmodels:MainViewModel/>
                        </dx:RadialProgressBar.BindingContext>
                        <dx:RadialProgressBar.ContentTemplate>
                            <DataTemplate x:DataType="viewmodels:MainViewModel">
                                <dx:DXStackLayout 
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Orientation="Vertical">
                                    <Label HorizontalOptions="Center" FontSize="Title" >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding Steps}" FontAttributes="Bold"/>
                                                <Span Text=" steps"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <dx:DXImage Source="feet.svg" 
                                        TintColor="{dx:ThemeColor Primary}" HeightRequest="30"/>
                                    <Label HorizontalOptions="Center" FontSize="Title" >
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="50" FontAttributes="Bold"/>
                                                <Span Text="%"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </dx:DXStackLayout>
                            </DataTemplate>
                        </dx:RadialProgressBar.ContentTemplate>
                    </dx:RadialProgressBar>
                    <Grid
                        ColumnDefinitions="*,*,*">
                        <VerticalStackLayout>
                            <Label Text="453kcal"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout
                            Grid.Column="1">
                            <Label 
                                HorizontalOptions="Center"
                                Text="453kcal"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout
                            Grid.Column="2">
                            <Label Text="453kcal"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
